  newNumber->next=NULL
  newName->next=NULL

  if(headForNames==NULL)then
    headForNames=newName
    headForNumbers=newNumber

else
  Name temp =  headForNames
  Number temp2 = headForNumbers 
  WHILE(temp->next!=NULL)
    temp=temp->next
    temp2=tem2p->next
